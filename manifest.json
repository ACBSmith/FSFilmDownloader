{
  "manifest_version": 2,

  "name": "FamilySearch Film Downloader",
  "description": "This extension downloads all the images in a FamilySearch Film.",
  "version": "1.0",
  "icons": {
    "128": "filmReelIcon128.png",
    "48": "filmReelIcon48.png",
    "16": "filmReelIcon16.png"
  },

  "page_action": {
    "default_icon": {
      "16": "filmReelIcon16.png",
      "48": "filmReelIcon48.png",
      "128": "filmReelIcon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "PageFontStyle"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "content_scripts":[
    {
      "matches": ["https://www.familysearch.org/ark:/*"],
      "matches": ["https://www.familysearch.org/search/film/*"],
      "js": ["content.js", "jquery-3.1.0.min.js"],
      "css": ["content.css"]
    }
  ],

  "permissions": [
    "tabs",
    "https://www.familysearch.org/ark:/*",
    "https://www.familysearch.org/*",
    "downloads"
        ]
}